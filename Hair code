<body>
  <header><h2>üíá HairTry ‚Äì –ø—ñ–¥–±—ñ—Ä —á–æ–ª–æ–≤—ñ—á–∏—Ö —Å—Ç—Ä–∏–∂–æ–∫</h2></header>

  <input type="file" id="upload" accept="image/*"><br>
  <canvas id="canvas"></canvas>

  <div class="controls">
    <button onclick="mirror()">‚Üî –î–∑–µ—Ä–∫–∞–ª–∏—Ç–∏</button>
    <button onclick="save()">üíæ –ó–±–µ—Ä–µ–≥—Ç–∏</button>
  </div>

  <div class="thumbs">
    <img src="https://i.ibb.co/t8y8XLp/fade.png" onclick="selectHair(this.src)">
    <img src="https://i.ibb.co/7KqHRhF/undercut.png" onclick="selectHair(this.src)">
    <img src="https://i.ibb.co/ZKX0hYF/quiff.png" onclick="selectHair(this.src)">
  </div>

<script>
let canvas = document.getElementById("canvas");
let ctx = canvas.getContext("2d");
let userImg = new Image();
let hairImg = new Image();
let mirrored = false;

document.getElementById("upload").addEventListener("change", e => {
  let file = e.target.files[0];
  if (!file) return;
  let reader = new FileReader();
  reader.onload = ev => {
    userImg.onload = draw;
    userImg.src = ev.target.result;
  };
  reader.readAsDataURL(file);
});

function selectHair(src) {
  hairImg = new Image();
  hairImg.onload = draw;
  hairImg.src = src;
}

function draw() {
  canvas.width = userImg.width * 0.6;
  canvas.height = userImg.height * 0.6;
  ctx.clearRect(0, 0, canvas.width, canvas.height);
  ctx.drawImage(userImg, 0, 0, canvas.width, canvas.height);
  if (hairImg.src) {
    ctx.save();
    if (mirrored) {
      ctx.translate(canvas.width, 0);
      ctx.scale(-1, 1);
      ctx.drawImage(hairImg, 0, 0, canvas.width, canvas.height * 0.4);
      ctx.restore();
    } else {
      ctx.drawImage(hairImg, 0, 0, canvas.width, canvas.height * 0.4);
    }
  }
}

function mirror() { mirrored = !mirrored; draw(); }
function save() {
  let link = document.createElement("a");
  link.download = "my_hairstyle.png";
  link.href = canvas.toDataURL();
  link.click();
}
</script>
</body>
